.Border
  color #717070
  margin-bottom 2em
  margin-top 2em
  border 1px solid #a5a1a1
.Compra
  font-weight bold
.PrecioAntiguo
  text-decoration line-through
.Vendido a
  color #2f50d5
.Vendido a:hover
  text-decoration none
.Button
  padding 11px 0
  border-radius 2px
.Button2
  border-radius 3px
  padding 12px 0
  font-weight bold
.Button3
  width 100%
  text-align left
  margin-bottom 14px
  padding 5px 0
  border-radius 3px
.fa-thumbs-o-up
  font-size 1.5em
  padding-right 4px
  color #6d6d6d
  border-right 2px solid #2f50d5
.fa-heart
  padding-right 6px
.fa-chevron-down
  padding 3px
  float right
.Talla
  justify-content space-between
  display flex
  align-items center
.Talla a
  text-decoration none
  color #2f50d5
.Pago
  margin-bottom 2em
  display flex
  width 6em
.Pago p
  padding 5px 0 0 2px
  font-size 6px
